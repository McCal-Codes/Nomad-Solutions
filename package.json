{
  "name": "nomad-solutions",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:widgets": "webpack --config widget.config.js",
    "build:all": "npm run build:widgets && npm run build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "size": "size-limit",
    "test": "jest --config jest.config.js --coverage",
    "test:ci": "jest --config jest.config.js --ci --silent",
    "test:watch": "jest --config jest.config.js --watch",
    "clean": "rm -rf .next out coverage .cache node_modules/.cache",
    "lighthouse": "node scripts/lighthouse-audit.js",
    "repo:health": "node scripts/repo-health.js",
    "preview:demos": "open ./public/demos/index.html",
    "ai:preflight:short": "node scripts/utils/ai-preflight-short.js",
    "ai:preflight:full": "npm run ai:preflight:short && npm run lint && npm run test && npm run size",
    "ai:instructions": "node scripts/utils/ai-instructions-preflight.js"
  },
  "dependencies": {
    "next": "14.2.13",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@types/node": "22.9.0",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.1",
    "autoprefixer": "10.4.20",
    "babel-loader": "^9.1.3",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.13",
    "postcss": "8.4.47",
    "tailwindcss": "3.4.14",
    "typescript": "5.6.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@size-limit/file": "^11.1.0",
    "size-limit": "^11.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.12",
    "@testing-library/dom": "^9.3.3",
    "jsdom": "^24.0.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "size-limit": [
    { "path": "public/widgets/availability-widget-simple.js", "limit": "6 KB" },
    { "path": "public/widgets/fleet-widget-simple.js", "limit": "9 KB" },
    { "path": "public/widgets/availability-widget.js", "limit": "150 KB" },
    { "path": "public/widgets/pricing-widget.js", "limit": "150 KB" },
    { "path": "public/widgets/rv-card-widget.js", "limit": "150 KB" }
  ]
}
